@model BlogWeb.Models.Domain.BlogPost
@{
}
<div class="bg-secondary bg-black bg-opacity-10 py-2">
    <div class="container">
        <h1>Add New Post - Admin Functionality</h1>
    </div>
</div>
<div class="container py-5">
    <form method="post">
        <input asp-for="Id" type ="hidden"/>
        <div class="mb-3">
            <label class="form-label">Name</label>
            <input type="text" class="form-contol" id="Heading" name="Heading" asp-for="Heading" />
        </div>
        <div class="mb-3">
            <label class="form-label">Content</label>
            <input type="text" class="form-contol" id="Content" name="Content" asp-for="Content" />
        </div>
        <div class="mb-3">
            <label class="form-label">ShortDescription</label>
            <input type="text" class="form-contol" id="ShortDescription" name="ShortDescription" asp-for="ShortDescription" />
        </div>
        <div class="mb-3">
            <label class="form-label">PageTitle</label>
            <input type="text" class="form-contol" id="PageTitle" name="PageTitle" asp-for="PageTitle" />
        </div>
        <div class="mb-3">
            <label class="form-label">FeaturedImageUrl</label>
            <input type="text" class="form-contol" id="FeaturedImageUrl" name="FeaturedImageUrl" asp-for="FeaturedImageUrl" />
        </div>
        <div class="mb-3">
            <label class="form-label">Author</label>
            <input type="text" class="form-contol" id="Author" name="Author" asp-for="Author" />
        </div>
        <div class="mb-3">
            <button type="submit" class="btn btn-dark">Submit</button>
        </div>

    </form>

</div>